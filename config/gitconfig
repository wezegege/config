[core]
editor = vim
autocrlf = input
whitespace = trailing-spaces,space-before-tab
excludesfile = ~/.gitignore

[color]
branch=auto
diff=auto
interactive=auto
status=auto

[format]
pretty=oneline # display one line per log entry

[alias]
st = status
ci = commit
co = checkout
cl = clone
br = branch -avv
pulll = pull --recurse-submodules=yes -ff
difff = diff --staged
wdiff = diff --word-diff
addd = add --patch
sub = submodule
subup = submodule update --init
subpull = submodule foreach git pull origin master
subco = submodule foreach git checkout master
lg = log -n 10 --abbrev-commit
lgg = log --graph --pretty=format:'%Cred%h%Creset %s%Cred%d%Creset %Cgreen(%cr by %cN)%Creset'
show-graph = log --graph --abbrev-commit --pretty=oneline
diffc = diff --cached
re = remote -vv
uremote = remote -v
pullff = pull --ff
pullrb = pull --rebase
mergeff = merge --ff

[help]
autocorrect = 1

[diff]
renames = copies # detects file moving and copying
mnemonicprefix = true

[branch]
autosetupmerge = always # auto track remote branch
autosetuprebase = always # auto track remote branch

[push]
default = tracking # defaults push to upstream branch

[rerere]
enabled = true # record resolved conflicts hunks
[user]
	email = wezegege@live.fr
	name = Wezegege
